<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h1>Products</h1>
            <table>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                </tr>
                <% @products.each do |product| %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
        